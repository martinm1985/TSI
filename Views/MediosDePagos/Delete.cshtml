@model Crud.Models.MediosDePagos
@{
    ViewData["Title"] = "Eliminar Medio de Pago";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col-sm-6">
            <h3>Eliminar medio de Pago</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <form method="post" asp-action="DeleteMedio">
                <input type="hidden" asp-for="Id"/>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Detalle" class="control-label"></label>
                    <input asp-for="Detalle" class="form-control" disabled/>
                    <span asp-validation-for="Detalle" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FechaValidez" class="control-label"></label>
                    <input asp-for="FechaValidez" class="form-control" disabled/>
                    <span asp-validation-for="FechaValidez" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Eliminar Medio de Pago" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{ <partial name="_ValidationScriptsPartial" /> }
}


